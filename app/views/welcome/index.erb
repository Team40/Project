<div class="breadcrumb">
    <ul>
        <li><a href="">All Fields</a>&nbsp;<i class="fa fa-angle-double-right"></i>&nbsp;</li>
        <li><a href="">Biology</a>&nbsp;<i class="fa fa-angle-double-right"></i>&nbsp;</li>
        <li><a href="">Stem Cell Biology</a></li>
    </ul>
</div>
<div class="publications-list">
    <% @pubs.each do |publication| %>
        <div class="publication">
            <span class="category"><%= publication[0]["category"] %></span>
            <%= link_to publication[0]["title"], { :controller => :pages, :action => :publication}, :class => 'title' %>
            <p class="excerpt">
            <%= publication[0]["abstract"] %>
            </p>
            <div class="clearfix">
                <div class="author clearfix">
                    <div class="image">
                        <%= image_tag "default.jpg" %>
                    </div>
                    <div class="info">
                        <h3 class="name"><%= publication[0]["authors"][0,100] %></h3>
                        <span class="pub-date">Created on <%= publication[0]["date"] %></span>
                    </div>
                </div>
                <div class="actions">
                    <a class="upvote" data-toggle="tooltip" title="Upvote"><i class="fa fa-arrow-up"></i>&nbsp;49</a>
                    <a class="comments" data-toggle="tooltip" title="Comment"><i class="fa fa-comments"></i>&nbsp;8</a>
                    <a class="bookmark" data-toggle="tooltip" title="Bookmark"><i class="fa fa-bookmark"></i>&nbsp;</a>
                </div>
            </div>
        </div>
    <% end %>
</div>